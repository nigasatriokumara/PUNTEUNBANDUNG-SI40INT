<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#87cefa"
    tools:context="apps.sinterklas.punteunbandung.HotelReviewActivity">

    <ImageView
        android:id="@+id/slideimg10"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:id="@+id/editTitleEvent"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slideimg10"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:padding="16dp"
        android:text="SERAT ULASAN ANJEUN DIDIEU"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editReview"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_alignEnd="@+id/editTitleEvent"
        android:layout_alignRight="@+id/editTitleEvent"
        android:layout_below="@+id/editTitleEvent"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Review" />

    <Button
        android:id="@+id/btnkirim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editReview"
        android:layout_alignRight="@+id/editReview"
        android:layout_below="@+id/editReview"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/round"
        android:text="Kirim" />

</RelativeLayout>
